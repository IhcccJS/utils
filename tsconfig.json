{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "lib": ["ES2021", "DOM"],
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@ihccc/utils": ["src"],
      "@ihccc/utils/*": ["src/*", "*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*", ".dumirc.ts"],
  "exclude": ["node_modules", "es/**/*", "cjs/**/*", "dist/**/*"]
}
